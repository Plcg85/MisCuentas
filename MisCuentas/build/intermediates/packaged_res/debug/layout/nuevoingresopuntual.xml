<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondopeque">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editConceptoIngresoPuntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/concepto"
            android:inputType="text" />

        <EditText
            android:id="@+id/editCuantiaIngresoPuntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/cero"
            android:inputType="numberDecimal" />

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editDiaIngresoPuntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/dia"
            android:inputType="number" />

        <EditText
            android:id="@+id/editMesIngresoPuntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/mes"
            android:inputType="number" />

        <EditText
            android:id="@+id/editAnioIngresoPuntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/anio"
            android:inputType="number" />

    </LinearLayout>    
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/btnGuardarIngresoPuntual"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:background="@drawable/botonguardar"/>
    </RelativeLayout>

</LinearLayout>
